<div class="container">
    <h1>Enter the Amount to be Paid</h1>

    <!-- Input field for Amount -->
    <div class="amount-section">
        <input type="number" id="amount" placeholder="Amount in USD" class="input-category">
    </div>

    <!-- Categories section -->
    <div class="category-section">
        <h2>Select Category</h2>
        <div class="category">Food</div>
        <div class="category">Clothes</div>
    </div>

    <!-- Custom Category input form -->
    <div class="category-form">
        <input type="text" id="newCategory" class="input-category" placeholder="Add your own category">
    </div>

    <button class="proceed-btn" onclick="redirectToPayment()">Proceed to Payment Screen</button>
</div>

<script>
    // Add a new custom category dynamically
    document.getElementById('newCategory').addEventListener('keydown', function(event) {
        if (event.key === 'Enter') {
            var newCategory = event.target.value;
            if (newCategory) {
                var categoryContainer = document.querySelector('.category-section');
                var newCategoryElement = document.createElement('div');
                newCategoryElement.classList.add('category');
                newCategoryElement.textContent = newCategory;
                categoryContainer.appendChild(newCategoryElement);
                event.target.value = ''; // Clear the input field
            }
        }
    });

    // Redirect to Twitter when Proceed button is clicked
    function redirectToPayment() {
        window.location.href = "https://twitter.com";
    }
</script>

